<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Simple Responsive Admin</title>
    <!-- BOOTSTRAP STYLES-->
    <link href="~/Content/Admin/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/Content/Admin/assets/css/font-awesome.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="~/Content/Admin/assets/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>
<body>
    <div id="wrapper">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="adjust-nav">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="@Url.Action("Index","Kategoris")">
                        <img src="~/Content/Admin/assets/img/admin-logo-png-5.png" width="60" height="60" />
                    </a>
                </div>
                <span class="logout-spn">
                    <a href="@Url.Action("Index","Kategoris")" style="color:#fff;">Yönetim Paneli</a>

                </span>
            </div>
        </div>
        <!-- /. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">


                    <li>
                        <a href="@Url.Action("Index","Kategoris")"><i class="fa fa-desktop "></i>Kategoriler</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Uruns")"><i class="fa fa-table "></i>Kitaplar</a>
                    </li>
                    <li class="active-link">
                        <a href="@Url.Action("Index","SoruVeCevaps")"><i class="fa fa-edit "></i>Sorular ve Cevaplar</a>
                    </li>

                    <li>
                        <a href="@Url.Action("Anasayfa","Uruns")"><i class="fa fa-desktop "></i>Anasayfa</a>
                    </li>

                </ul>
            </div>
        </nav>
        <!-- /. NAV SIDE  -->

    @RenderBody()



    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <script src="~/Content/Admin/assets/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="~/Content/Admin/assets/js/bootstrap.min.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="~/Content/Admin/assets/js/custom.js"></script>
</body>
</html>
