@model IEnumerable<SesliKitap.Models.Kategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-lg-12">
                <h2>Kategoriler</h2>

                <p>
                    @Html.ActionLink("Kategori Ekle", "Create")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            Kategori Adı
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.KategoriAdi)
                            </td>
                            <td>
                                @Html.ActionLink("Düzenle", "Edit", new { id = item.KategoriID }) |
                                @Html.ActionLink("Detay", "Details", new { id = item.KategoriID }) |
                                @Html.ActionLink("Sil", "Delete", new { id = item.KategoriID })
                            </td>
                        </tr>
                    }

                </table>
                </div>
</div>
</div>
</div>