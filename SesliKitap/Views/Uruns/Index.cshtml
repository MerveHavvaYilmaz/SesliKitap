@model IEnumerable<SesliKitap.Models.Urun>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-lg-12">
                <h2>Kitaplar</h2>
            </div>
        </div>
        <p>
            @Html.ActionLink("Kitap Ekle", "KitapEkle")
        </p>
        <table class="table">
            <tr>
                <th>Kategori Adı
                </th>
                <th>
                    Kitap Adı
                </th>
                <th>
                    Eklenme Tarihi
                </th>
            
                <th>
                   Süre
                </th>
                <th>
                   Seslendiren
                </th>
                <th>
                   Demo
                </th>

                <th>
                   Fotoğraf
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Kategori.KategoriAdi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UrunAdi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EklenmeTarihi)
                    </td>                
                    <td>
                        @Html.DisplayFor(modelItem => item.Süre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Seslendiren)
                    </td>
                    <td>
                        <audio controls="controls">
                            <source type="audio/mp3" src="@item.Demo" />
                        </audio>
                    </td>
                    <td>
                        <img width="75" src="@item.Resim" />
                    </td>
                    <td>
                        @Html.ActionLink("Düzenle", "KitapDüzenle", new { id = item.UrunID }) |
                        @Html.ActionLink("Detay", "Details", new { id = item.UrunID }) |
                        @Html.ActionLink("Sil", "Delete", new { id = item.UrunID })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
