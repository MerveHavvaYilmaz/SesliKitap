@model IEnumerable<SesliKitap.Models.SoruVeCevap>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-lg-12">
                <h2>Soru ve Cevaplar</h2>
                <p>
                    @Html.ActionLink("Soru Ekle", "SoruCevapEkle")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Users.UserRole)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Soru)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cevap)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Users.UserRole)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Soru)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cevap)
                            </td>
                            <td>
                                @Html.ActionLink("Düzenle", "Edit", new { id = item.SoruCevapID }) |
                                @Html.ActionLink("Detay", "Details", new { id = item.SoruCevapID }) |
                                @Html.ActionLink("Sil", "Delete", new { id = item.SoruCevapID })
                            </td>
                        </tr>
                    }

                </table>
                </div>
            </div>
        </div>
    </div>
